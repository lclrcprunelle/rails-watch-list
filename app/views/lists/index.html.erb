<div class="container">
  <header>
    <h1 class="display-4 my-4">My Lists</h1>
  </header>

  <main>
    <ul class="list-group mb-4">
      <% @lists.each do |list| %>
        <li class="list-group-item">
          <%= link_to list.name, list_path(list), class: 'text-decoration-none' %>
        </li>
      <% end %>
    </ul>
  </main>

  <footer>
    <h5 class="mt-4">
      <%= link_to "Create a new list", new_list_path, class: 'btn btn-primary' %>
    </h5>
  </footer>
</div>
