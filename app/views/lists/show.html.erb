<div class="container">
  <header class="my-4">
    <h1 class="display-4">Movies</h1>
  </header>

  <main>
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card mb-4">
        <div class="row no-gutters">
          <div class="col-md-4">
            <img src="<%= bookmark.movie.poster_url %>" class="card-img" alt="<%= bookmark.movie.title %> poster">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= bookmark.movie.title %></h5>
              <p class="card-text"><%= bookmark.movie.overview %></p>
              <p class="card-text"><strong>Rating:</strong> <%= bookmark.movie.rating %></p>
              <p class="card-text"><strong>Comment:</strong> <%= bookmark.comment %></p>
              <%= link_to "Delete the movie", bookmark_path(bookmark), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </main>

  <footer class="my-4">
    <div class="d-flex justify-content-between">
      <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
      <%= link_to "Go back", lists_path, class: "btn btn-secondary" %>
    </div>
  </footer>
</div>
